        <Button x:Name="num1btn_Copy2" Content="1" HorizontalAlignment="Left" Margin="120,60,0,0" VerticalAlignment="Top" Width="28" Height="28" RenderTransformOrigin="0.071,2.071"/>
        <Button x:Name="num2Btn" Content="2" HorizontalAlignment="Left" Margin="164,60,0,0" VerticalAlignment="Top" Width="28" Height="28" RenderTransformOrigin="0.071,2.071" Click="num1Btn_Click"/>
